// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Accounts {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  password  String
  email     String    @unique
  role      String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt()
}

model Contracts {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  number              Int
  customer            Json
  customerBranches    Json?
  customerUsers       Json?
  masterManager       Json
  comercialConditions Json?
  pricing             Json?
}

model Customers {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  status       String?
  name         String?
  fantasyName  String?
  document     String?      @unique
  address      Json
  phone        String?
  website      String
  logo         Json?
  // adminId      String       @unique @db.ObjectId
  // admin        Accounts?    @relation(fields: [adminId], references: [id])
  managerName  String
  managerPhone String
  managerEmail String
  pendingItems Json?
  passengers   Passengers[]
  ccAreas      Json?
  billingInfo  Json?
  enabled      Boolean
  createdAt    DateTime?    @default(now())
  updatedAt    DateTime?    @updatedAt()
}

model Passengers {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String     @unique
  phone        String
  company      Customers? @relation(fields: [customerId], references: [id])
  customerId   String?    @db.ObjectId
  customerName String?
  department   String?
  position     String?
  restrictions Json?
  status       String
  active       Boolean
  type         String //Corp or Regular
  document     String?
  history      Json?
  createdAt    DateTime?  @default(now())
  updatedAt    DateTime?  @updatedAt()
}

model Drivers {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  phone         String
  document      String
  driverLicense String
  driverFiles   Json?
  address       Json?
  rideArea      String?
  driverCars    Json?
  rating        Json?
  history       Json?
  status        String
  enabled       Boolean
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt()
}
