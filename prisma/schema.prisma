// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Accounts {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  document       String?
  password       String
  email          String      @unique
  role           String
  avatar         Json?
  contract       Json?
  phone          String?
  position       String?
  department     String?
  birthDate      String?
  history        Json?
  status         String?
  enabled        Boolean
  emailConfirmed Boolean?
  acceptTerms    Boolean?
  createdAt      DateTime?   @default(now())
  updatedAt      DateTime?   @updatedAt()
  Branches       Branches[]
  Contracts      Contracts[]

  @@unique([id, username])
}

model Contracts {
  id                  String     @id @default(auto()) @map("_id") @db.ObjectId
  customerName        String?
  customer            Customers? @relation(fields: [customerId], references: [id])
  customerId          String?    @db.ObjectId
  comercialConditions Json?
  mainBudget          String?
  availableBudget     String?
  products            Json?
  manager             Accounts?  @relation(fields: [managerId, managerName], references: [id, username])
  managerId           String?    @db.ObjectId
  managerName         String?
  managerInfo         Json?
  additionalInfo      String?
  history             Json?
  status              String?
  enabled             Boolean?
  createdAt           DateTime?  @default(now())
  updatedAt           DateTime?  @updatedAt()
  branches            Branches[]
}

model Branches {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  branchCode     String?
  name           String?
  fantasyName    String?
  document       String?    @unique
  address        Json?
  phone          String?
  phoneExtension String?
  areas          Json?
  manager        Accounts?  @relation(fields: [managerId], references: [id])
  managerId      String?    @db.ObjectId
  managerInfo    Json?
  budget         String?
  status         String?
  enabled        Boolean?
  contract       Contracts? @relation(fields: [contractId], references: [id])
  contractId     String?    @db.ObjectId
  createdAt      DateTime?  @default(now())
  updatedAt      DateTime?  @updatedAt()
}

model Customers {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  status         String?
  name           String?
  fantasyName    String?
  document       String?     @unique
  address        Json?
  phone          String?
  phoneExtension String?
  website        String?
  logo           Json?
  budget         String?
  enabled        Boolean?
  createdAt      DateTime?   @default(now())
  updatedAt      DateTime?   @updatedAt()
  Contracts      Contracts[]
}

model Drivers {
  id                String    @id @map("_id")
  name              String
  email             String
  phone             String
  document          String?
  driverLicense     String?
  licenseExpiration String?
  licenseCategory   String?
  driverFiles       Json?
  address           Json?
  actuationArea     String?
  driverCars        Json?
  rating            Json?
  history           Json?
  status            String
  enabled           Boolean
  outsideActuation  Boolean?
  scheduleOpen      Boolean?
  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt()
}

model Products {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  image         Json?
  code          String
  name          String
  type          String
  capacity      Int?
  basePrice     String?
  includedHours String?
  includedKms   Int?
  kmPrice       String?
  minutePrice   String?
  description   String?
  enabled       Boolean?
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt()
}

model Rides {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  billing    Json?
  user       Json?
  product    Json?
  reason     Json?
  travel     Json?
  status     String?
  accepted   Boolean?
  price      String?
  driver     Json?
  dispatcher Json?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt()
}
