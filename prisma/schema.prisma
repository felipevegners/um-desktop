// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Accounts {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  password  String
  email     String    @unique
  role      String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt()
}

model Contracts {
  id                  String         @id @default(auto()) @map("_id") @db.ObjectId
  customerName        String?
  customer            Customers?     @relation(fields: [customerId], references: [id])
  customerId          String?        @db.ObjectId
  customerBranches    Json?
  customerUsers       Json?
  comercialConditions Json?
  services            Json?
  manager             MasterManager? @relation(fields: [managerId], references: [id])
  managerId           String?        @db.ObjectId
  managerName         String?
  managerEmail        String?
  additionalInfo      String?
  status              String?
  enabled             Boolean?
  createdAt           DateTime?      @default(now())
  updatedAt           DateTime?      @updatedAt()
}

model MasterManager {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  phone      String?
  position   String?
  department String?
  email      String?     @unique
  password   String?
  Contracts  Contracts[]
  createdAt  DateTime?   @default(now())
  updatedAt  DateTime?   @updatedAt()
}

model Customers {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  status         String?
  name           String?
  fantasyName    String?
  document       String?     @unique
  address        Json?
  phone          String?
  phoneExtension String?
  website        String?
  logo           Json?
  enabled        Boolean?
  createdAt      DateTime?   @default(now())
  updatedAt      DateTime?   @updatedAt()
  Contracts      Contracts[]
}

model Passengers {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String    @unique
  phone        String
  customerName String?
  department   String?
  position     String?
  restrictions Json?
  status       String
  active       Boolean
  type         String //Corp or Regular
  document     String?
  history      Json?
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @updatedAt()
}

model Drivers {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  phone         String
  document      String
  driverLicense String
  driverFiles   Json?
  address       Json?
  rideArea      String?
  driverCars    Json?
  rating        Json?
  history       Json?
  status        String
  enabled       Boolean
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt()
}

model Products {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  image         Json?
  code          String
  name          String
  type          String
  capacity      Int?
  price         String?
  basePrice     String?
  includedHours String?
  includedKms   Int?
  kmPrice       String?
  minutePrice   String?
  description   String?
  enabled       Boolean?
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt()
}
