// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  hashedPassword String
  email          String     @unique
  name           String
  company        Customers?
  position       String?
  role           String
  createdAt      DateTime?  @default(now())
  updatedAt      DateTime?  @updatedAt()
}

model Customers {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  status       String?
  name         String?
  fantasyName  String?
  document     String?      @unique
  address      Json
  phone        String?
  website      String
  logo         String
  adminId      String       @unique @db.ObjectId
  admin        Users?       @relation(fields: [adminId], references: [id])
  managerName  String
  managerPhone String
  managerEmail String
  pendingItems Json?
  passengers   Passengers[]
  ccAreas      Json?
  billingInfo  Json?
  enabled      Boolean
  createdAt    DateTime?    @default(now())
  updatedAt    DateTime?    @updatedAt()
}

model Passengers {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String
  phone        String
  company      Customers? @relation(fields: [customerId], references: [id])
  customerId   String?    @db.ObjectId
  customerName String?
  department   String?
  position     String?
  restrictions Json?
  status       String
  active       Boolean
  type         String //Corp or Regular
  document     String?    @unique
  history      Json?
  createdAt    DateTime?  @default(now())
  updatedAt    DateTime?  @updatedAt()
}
