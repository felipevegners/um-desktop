// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  hashedPassword String
  email          String   @unique
  name           String
  companyId      String
  companyName    String?
  companyArea    String?
  position       String?
  role           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
}

model Customers {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  document     String?
  address      Json
  phone        String?
  website      String
  logo         String
  adminId      String
  managerName  String
  managerPhone String
  managerEmail String
  passengers   Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model Passengers {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String @unique
  phone        String
  position     String
  restrictions Json
}
